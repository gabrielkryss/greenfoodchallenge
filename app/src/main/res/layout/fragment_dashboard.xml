<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/fragment_dashboard_pie_chart"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Plan:   "/>

        <TextView
            android:id="@+id/fragment_dashboard_currentplan_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:   "/>

        <TextView
            android:id="@+id/fragment_dashboard_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:   "/>

        <TextView
            android:id="@+id/fragment_dashboard_test_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test database"/>

    <TextView
        android:id="@+id/fragment_dashboard_test_db"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:scrollbars="vertical"
        android:gravity="bottom"
        android:background="@drawable/border_grey"/>

    <Button
        android:id="@+id/fragment_dashboard_test_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add plans"/>

</LinearLayout>