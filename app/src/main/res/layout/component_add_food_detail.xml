<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_food_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/add_meal_list_item_layout_padding"
    android:paddingBottom="@dimen/add_meal_list_item_layout_padding"
    android:clickable="true"
    android:layout_gravity="top"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/add_food_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/profile_list_item_left_side_margin"
        android:src="@drawable/red_add_icon"/>

    <TextView
        android:id="@+id/add_food_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/add_meal_list_item_left_side_margin"
        android:text="add"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/profile_list_item_title_name_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp" />

    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/profile_list_item_right_side_margin"
        android:src="@drawable/arrow_right"
        android:visibility="gone"/>

</LinearLayout>