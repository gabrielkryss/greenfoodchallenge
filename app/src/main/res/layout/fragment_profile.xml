<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/my_grey"/>

    <LinearLayout
        android:id="@+id/profile_user_data_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/profile_list_item_layout_padding"
        android:paddingTop="@dimen/profile_list_item_layout_padding"
        android:clickable="true"
        android:layout_gravity="top"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profile_user_icon"
            android:layout_width="192px"
            android:layout_height="192px"
            android:layout_marginLeft="@dimen/profile_list_item_left_side_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_user_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/profile_list_item_title_name_size" />

            <TextView
                android:id="@+id/profile_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp" />

        </LinearLayout>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/profile_list_item_right_side_margin"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/my_grey"/>

    <LinearLayout
        android:id="@+id/profile_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/profile_list_item_layout_padding"
        android:paddingTop="@dimen/profile_list_item_layout_padding"
        android:orientation="horizontal"
        android:clickable="true"

        android:layout_gravity="top"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_list_item_left_side_margin"
            android:src="@drawable/setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_list_item_text_view_left_side_margin"
            android:textSize="@dimen/profile_list_item_title_name_size"
            android:text="@string/title_activity_settings" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/profile_list_item_right_side_margin"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_grey" />


</LinearLayout>